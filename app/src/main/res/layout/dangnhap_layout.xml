<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="40sp"
        android:textColor="#000000"
      android:fontFamily="@font/font_franchise"
       android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLogin"
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/linearLogin"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/khung_dangnhap"
            android:drawableLeft="@mipmap/user"
            android:drawablePadding="15dp"
            android:hint="User name"
            android:paddingLeft="20dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/khung_dangnhap"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:password="true"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btnvaobep_background"
            android:text="LOGIN"
            android:textColor="#fff" />
        <Button
            android:layout_margin="10dp"
        android:textColor="#fff"
        android:text="LOGIN WITH FACEBOOK"
        android:padding="10dp"
        android:background="@drawable/btnvaobep_background"
        android:drawableLeft="@mipmap/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <Button
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:text="LOGIN WITH GMAIL"
            android:padding="10dp"
            android:background="@drawable/btnvaobep_background"
            android:drawableLeft="@mipmap/gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
          android:layout_marginLeft="70dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="Now user ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnDangKi"
                android:text="Sign up "
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>